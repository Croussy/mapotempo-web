<table id="accordion" class="table table-striped table-hover">
  <thead>
    <th><%= t 'activerecord.attributes.vehicle.name' %></th>
    <th><%= t 'activerecord.attributes.vehicle.router_id' %></th>
    <th><%= t 'activerecord.attributes.vehicle.emission' %></th>
    <th><%= t 'activerecord.attributes.vehicle.consumption' %></th>
    <th><%= t 'activerecord.attributes.vehicle.capacity' %></th>
    <th><%= t 'vehicle_usages.index.stores' %></th>
    <th><%= t 'activerecord.attributes.vehicle_usages.time' %></th>
    <th></th>
  </thead>
  <tbody>
    <% vehicle_usage_set.vehicle_usages.each do |vehicle_usage| %>
      <tr>
        <td>
          <div class="vehicle_color" style="background:<%= vehicle_usage.vehicle.color %>"></div>
          <%= vehicle_usage.vehicle.name %>
        </td>
        <td><%= vehicle_usage.vehicle.router && vehicle_usage.vehicle.router.name %></td>
        <td><% if !vehicle_usage.vehicle.emission.nil? %><%= vehicle_usage.vehicle.emission %>&nbsp;<%= t 'all.unit.kgco2e_l_html' %><% end %></td>
        <td><% if !vehicle_usage.vehicle.consumption.nil? %><%= vehicle_usage.vehicle.consumption %>&nbsp;<%= t 'all.unit.l_100km' %><% end %></td>
        <td><%= vehicle_usage.vehicle.capacity %></td>
        <td>
          <% if vehicle_usage.store_start || vehicle_usage.store_stop %>
            <% if vehicle_usage.default_store_start %>
              <%= vehicle_usage.default_store_start.name %>
            <% else %>
              <i class="fa fa-ban fa-fw" title="<%= t 'vehicle_usages.index.store.no_start' %>"></i>
            <% end %>
            <% if vehicle_usage.default_store_start != vehicle_usage.default_store_stop %>
              <i class="fa fa-long-arrow-right fa-fw"></i>
              <% if vehicle_usage.default_store_stop %>
                <%= vehicle_usage.default_store_stop.name %>
              <% else %>
                <i class="fa fa-ban fa-fw" title="<%= t 'vehicle_usages.index.store.no_stop' %>"></i>
              <% end %>
            <% elsif vehicle_usage.default_store_start %>
              <i class="fa fa-undo fa-flip-vertical fa-fw" title="<%= t 'vehicle_usages.index.store.same_start_stop' %>"></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= if vehicle_usage.open then l(vehicle_usage.open, format: :hour_minute) end %>
          <% if vehicle_usage.open || vehicle_usage.close %>-<% end %>
          <%= if vehicle_usage.close then l(vehicle_usage.close, format: :hour_minute) end %>
        </td>
        <td><%= link_to edit_vehicle_usage_path(vehicle_usage) + '?back=true', :class => 'btn btn-primary btn-sm' do %><i class="fa fa-edit fa-fw"></i> <%= t 'all.verb.edit' %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
